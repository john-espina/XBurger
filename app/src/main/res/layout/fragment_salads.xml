<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_salad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_constraintTop_toBottomOf="@id/step_one_subtitle"
    tools:context="com.example.espinajohn.xburger.fragments_ingredient_page.BunsFragment">

    <LinearLayout
        android:id="@+id/radiogroup_salad_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_bun_option"
        android:layout_marginTop="50dp"
        android:background="#fff"
        android:padding="8dp"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/title_salad_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/step_one_subtitle"
        android:layout_weight="1"
        android:background="@drawable/headings_bg"
        android:padding="5dp"
        android:elevation="5dp"
        android:text="SOMETHING HEALTHY"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />

</FrameLayout>


